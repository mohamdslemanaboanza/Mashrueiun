<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activities.DetailsDonationActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:drawableLeft="@drawable/ic_back"
                android:elevation="1dp"
                android:gravity="center"
                android:paddingRight="20dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="طرد غذائي"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true" />


    </androidx.viewpager.widget.ViewPager>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/commit"
            android:gravity="center"
            android:layout_margin="10dp"
            />


        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="share"
            android:src="@drawable/ic_share_black_24dp"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"            />

        <TextView
            android:id="@+id/likes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_favorite_border_black_24dp"
            android:gravity="center"
            android:layout_margin="10dp"
            />


    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="7dp"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohmad Sleman AbuAnzeh"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                />

            <TextView
                android:id="@+id/added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Added 2 days ago"
                android:drawableLeft="@drawable/ic_check"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amman"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="5dp"
                android:gravity="center"


                />

        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/hint_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التفاصيل"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/detalis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="يوجد اكثر من 50 طرد عذائي كل طرد يتكون من
زيد قلي و معكرونة و جبنة تشيز .
للتواصل الاتصال على الرقم التالي 07897046963
المكان في القويسمة \n وادي الرمم "
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="3dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:background="@drawable/border"
        android:textColor="#000"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />
  
    <LinearLayout
        android:background="@drawable/back_details"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="1dp"
        android:elevation="7dp"
        android:layout_height="180dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            />

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/make_phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="5dp"
        app:civ_border_color="#00FF00"
        app:civ_circle_background_color="#00FF00"
        android:layout_margin="20dp"
        android:elevation="7dp"
        android:src="@drawable/ic_local_phone_black_24dp"
        />

</LinearLayout></ScrollView>